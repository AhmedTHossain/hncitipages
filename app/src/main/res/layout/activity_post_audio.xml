<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.PostAudioActivity"
    android:paddingStart="5dp"
    android:paddingEnd="5dp"
    android:background="@color/white">
    <RelativeLayout
        android:id="@+id/layout_screentitle_shareaudio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/colorSurface"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <include
            android:id="@+id/image_button_back"
            layout="@layout/custom_image_button_back"/>

        <include
            android:id="@+id/text_screen_title_shareaudio"
            layout="@layout/screen_title_view"/>
    </RelativeLayout>
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/textview_postedby_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/roboto"
        android:text="@string/select_a_category_type_for_your_audio"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/layout_screentitle_shareaudio"/>
    <!-- Post Type Spinner Layout -->
    <LinearLayout
        android:id="@+id/layout_spinner_post_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        app:layout_constraintTop_toBottomOf="@id/textview_postedby_name"
        android:background="@drawable/rounded_corner_rectangle_bordered">

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/spinner_post_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorTextTitle"
            android:dropDownVerticalOffset="40dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:popupBackground="@color/colorSurface"
            android:spinnerMode="dropdown" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/audio_player_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/layout_spinner_post_type"
        app:layout_constraintBottom_toTopOf="@+id/textinputlayout_caption"
        android:visibility="visible">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150sdp"
            android:src="@drawable/audio_placeholder_2"
            android:scaleType="centerCrop"/>
        <com.potyvideo.library.AndExoPlayerView
            android:id="@+id/audio_player"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:andexo_aspect_ratio="aspect_mp3"
            app:andexo_play_when_ready="true"
            app:andexo_mute="mute"
            app:andexo_show_controller="true"
            app:andexo_loop="infinite"
            android:visibility="gone"/>
    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textinputlayout_caption"
        style="@style/MyTextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/audio_select_option_layout"
        android:hint="Caption"
        app:boxCornerRadiusBottomStart="20dp"
        app:boxCornerRadiusTopEnd="20dp"
        app:boxStrokeWidth="1dp"
        android:layout_marginBottom="50dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        app:hintTextColor="@color/colorText">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textInputEditText_audio_caption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|top"
            android:inputType="textMultiLine"
            android:lines="5"
            android:maxLines="5"/>
    </com.google.android.material.textfield.TextInputLayout>

    <ProgressBar
        android:id="@+id/share_audio_progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/audio_select_option_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:id="@+id/audio_select_option_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"
        android:visibility="visible">

        <!-- Capture Audio Button -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/capture_audio_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp"
            app:cardElevation="10dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gradient_button"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:text="Capture Voice Status"
                android:textAlignment="center"
                android:textColor="@color/colorSurface"
                android:textSize="16sp"
                android:padding="10dp"
                android:drawableStart="@drawable/mic_ic"/>
        </com.google.android.material.card.MaterialCardView>

        <!-- Select Audio Button -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/select_audio_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp"
            app:cardElevation="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gradient_button"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:text="Select from Files"
                android:textAlignment="center"
                android:textColor="@color/colorSurface"
                android:textSize="16sp"
                android:padding="10dp"
                android:drawableStart="@drawable/gallery_ic"/>
        </com.google.android.material.card.MaterialCardView>

        <!-- Share Audio Button -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/share_audio_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp"
            app:cardElevation="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:visibility="gone">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gradient_button"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:text="Share Audio"
                android:textAlignment="center"
                android:textColor="@color/colorSurface"
                android:textSize="16sp"
                android:padding="10dp"
                android:drawableStart="@drawable/gallery_ic"/>
        </com.google.android.material.card.MaterialCardView>

        <!-- Clear Audio Button -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/clear_audio_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp"
            app:cardElevation="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:visibility="gone">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gradient_button"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:text="Clear Audio"
                android:textAlignment="center"
                android:textColor="@color/colorSurface"
                android:textSize="16sp"
                android:padding="10dp"
                android:drawableStart="@drawable/delete_file_ic"/>
        </com.google.android.material.card.MaterialCardView>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>