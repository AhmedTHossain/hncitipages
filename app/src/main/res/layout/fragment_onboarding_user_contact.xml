<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.OnboardingUserContactFragment"
    android:background="@color/white">

    <!-- phone layout -->
    <LinearLayout
        android:id="@+id/layout_phone_onboarding_contact"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        android:paddingStart="50dp"
        android:paddingEnd="50dp"
        android:visibility="visible">

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:text="Your mobile number"
            android:textColor="@color/colorCenterLinearGradient"
            android:textSize="45sp"
            android:textStyle="bold" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/roboto"
            android:justificationMode="none"
            android:text="Please select your country code below."
            android:textSize="20sp"
            tools:targetApi="o" />

        <com.hbb20.CountryCodePicker
            android:id="@+id/country_code_picker"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:ccp_autoDetectCountry="true"
            app:ccp_textSize="20sp"
            app:ccp_arrowSize="40dp"
            app:ccp_flagBorderColor="@color/colorCenterLinearGradient"
            app:ccp_arrowColor="@color/colorCenterLinearGradient"
            app:ccpDialog_showCloseIcon="false"
            android:background="@drawable/rounded_corner_rectangle_bordered"/>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/roboto"
            android:justificationMode="none"
            android:text="Please enter your mobile number below."
            android:textSize="20sp"
            tools:targetApi="o" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/MyTextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Phone"
            app:boxCornerRadiusBottomStart="20dp"
            app:boxCornerRadiusTopEnd="20dp"
            app:boxStrokeWidth="1dp"
            app:hintTextColor="@color/colorText">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textinputedittext_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/phone_ic"
                android:drawableTint="@color/colorCenterLinearGradient"
                android:inputType="phone" />
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <!-- email layout -->
    <LinearLayout
        android:id="@+id/layout_email_onboarding_contact"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        android:paddingStart="50dp"
        android:paddingEnd="50dp"
        android:visibility="gone">

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:text="Your email address"
            android:textColor="@color/colorCenterLinearGradient"
            android:textSize="45sp"
            android:textStyle="bold" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/roboto"
            android:justificationMode="none"
            android:text="Please enter your email address below."
            android:textSize="20sp"
            tools:targetApi="o" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/MyTextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:hint="Email"
            app:boxCornerRadiusBottomStart="20dp"
            app:boxCornerRadiusTopEnd="20dp"
            app:boxStrokeWidth="1dp"
            app:hintTextColor="@color/colorText">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textinputedittext_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/email_ic"
                android:drawableTint="@color/colorCenterLinearGradient"
                android:inputType="textEmailAddress" />
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

</FrameLayout>