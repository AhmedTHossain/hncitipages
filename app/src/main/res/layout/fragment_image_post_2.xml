<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="5dp"
    android:paddingEnd="5dp"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/layout_screentitle_shareimage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/colorSurface"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_avatar_shareimage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:padding="5dp"
            android:src="@drawable/profile_ic"
            app:civ_border_width="0dp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_screen_title_shareimage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/playfair_display_bold"
            android:text="Share Photo"
            android:textColor="@color/colorTextTitle"
            android:textSize="14sp" />
    </LinearLayout>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/textview_postedby_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/roboto"
        android:text="@string/select_post_type"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/layout_screentitle_shareimage"/>

    <!-- Post Type Spinner Layout -->
    <LinearLayout
        android:id="@+id/layout_spinner_post_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        app:layout_constraintTop_toBottomOf="@id/textview_postedby_name"
        android:background="@drawable/rounded_corner_rectangle_bordered">

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/spinner_post_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorTextTitle"
            android:dropDownVerticalOffset="40dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:popupBackground="@color/colorSurface"
            android:spinnerMode="dropdown" />
    </LinearLayout>

    <ImageSwitcher
        android:id="@+id/imageswitcher_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/layout_spinner_post_type"
        app:layout_constraintBottom_toTopOf="@+id/textinputlayout_caption"
        android:layout_marginTop="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="50dp"
        android:layout_marginEnd="50dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textinputlayout_caption"
        style="@style/MyTextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/image_select_option_layout"
        android:hint="Caption"
        app:boxCornerRadiusBottomStart="20dp"
        app:boxCornerRadiusTopEnd="20dp"
        app:boxStrokeWidth="1dp"
        android:layout_marginBottom="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        app:hintTextColor="@color/colorText">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textInputEditText_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|top"
            android:inputType="textMultiLine"
            android:lines="5"/>
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:id="@+id/image_select_option_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/capture_image_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp"
            app:cardElevation="10dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gradient_button"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:text="Capture with Camera"
                android:textAlignment="center"
                android:textColor="@color/colorSurface"
                android:textSize="16sp"
                android:padding="10dp"
                android:drawableStart="@drawable/camera_ic"/>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/select_image_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp"
            app:cardElevation="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gradient_button"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:text="Select from Gallery"
                android:textAlignment="center"
                android:textColor="@color/colorSurface"
                android:textSize="16sp"
                android:padding="10dp"
                android:drawableStart="@drawable/gallery_ic"/>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>