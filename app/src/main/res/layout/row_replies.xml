<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/avatar_post"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:civ_border_width="0dp"
            android:src="@drawable/profile_ic"
            android:padding="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="@drawable/circular_ripple"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/name_post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground"
                android:fontFamily="@font/varela_round"
                android:text="John Doe"
                android:textSize="@dimen/_10ssp"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/options_icon_reply"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:background="@color/transparent"
                android:src="@drawable/options_ic" />
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/location_post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/name_post"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/varela_round"
                android:text="Dhaka, Bangladesh"
                android:textColor="@color/black"
                android:textSize="@dimen/_8ssp" />
        </RelativeLayout>
    </LinearLayout>
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/reply_post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:layout_centerVertical="true"
        android:fontFamily="@font/varela_round"
        android:text="Wonderful comment"
        android:textSize="@dimen/_10ssp"
        android:textColor="@color/black"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="5dp"/>
</LinearLayout>