<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/_30sdp">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/textview_title_voice_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pacifico"
        android:layout_marginBottom="30dp"
        android:text="Capture Voice Note"
        android:textAlignment="center"
        android:textSize="@dimen/_16ssp"
        android:textColor="@color/colorTextTitle"
        app:layout_constraintTop_toBottomOf="@id/layout_screentitle_shareimage"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/capture_voice_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/outline_mic_white_48dp"
        android:backgroundTint="@color/colorStartLinearGradient"
        app:fabCustomSize="@dimen/_50sdp"
        app:maxImageSize="38dp"
        android:layout_gravity="center"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/textview_disclaimer_voice_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/roboto"
        android:text="Hold the button above to start recording your voice note."
        android:textSize="14sp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/layout_screentitle_shareimage"/>
</LinearLayout>