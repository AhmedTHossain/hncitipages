<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/layout_row_user"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/_5sdp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circleimageview_row_avatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:civ_border_width="0dp"
            android:padding="5dp"
            app:civ_border_color="@android:color/white"
            android:src="@drawable/dummy_profile_avatar"/>

        <View
            android:id="@+id/support_circle_view"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/circle_hollow"
            android:padding="5dp"
            android:visibility="visible"/>

    </RelativeLayout>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/textview_row_avatar"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="John Doe"
        android:textSize="12sp"
        android:textAlignment="center"
        android:fontFamily="@font/roboto"/>
</LinearLayout>